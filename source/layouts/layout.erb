    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
      <%= "Portland Code School: " if current_page.data.title != "Portland Code School" %>
      <%= current_page.data.title %>
    </title>

    <link href="images/favicon.ico" rel="icon" type="image/x-icon" />

    <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", "/stylesheets/all" %>

    <%= javascript_include_tag "//code.jquery.com/jquery.js", "//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js", "all.js" %>

  </head>

  <body class="<%= page_classes %>">

    <%= partial "partials/header" %>

    <div class="container">

      <%= yield %>

    </div>

    <%= partial "partials/footer" %>

  </body>
</html>