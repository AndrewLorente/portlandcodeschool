
<header class="navbar navbar-default navbar-fixed-top">
  <!-- Navigation links -->
  <nav role="navigation">
    <!-- This sets/styles the collapsed menu button -->
    <div class="navbar-header">

      <!-- PCS logo -->
      <div class="col-xs-7" id="logo">
        <% link_to "/index.html", :class=>"navbar-brand" do %>
          <%= image_tag "logo-lt-teal.png" %>
        <% end %>
      </div>

      <!-- Apply button -->
      <div class="col-xs-5">
        <button type="button" class="btn btn-default navbar-btn apply-button">
          <%= link_to "Get Info!", "/getinfo.html" %>
        </button>
      </div>

      <!-- Menu button -->
      <div class="col-xs-5">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
    </div>
    
    <!-- Content that will toggle -->
    <div class="collapse navbar-collapse">
      <ul class="nav nav-pills">
        <li>
          <%= link_to "Classes", "/classes.html" %>
        </li>
        <li>
          <%= link_to "Contact", "/contact.html" %>
        </li>
        <li class="dropdown">
          <%= link_to "About <b class=\"caret\"></b>", "/about.html", :data => {:toggle => "dropdown"}, :class => "dropdown-toggle" %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "About", "/about.html" %>
            </li>
            <li>
              <%= link_to "FAQ", "/faq.html" %>
            </li>
            <li>
              <%= link_to "Calendar", "/calendar.html" %>
            </li>
            <li>
              <%= link_to "About This Site", "/siteabout.html" %>
            </li>
            <li>
              <%= link_to "Special Thanks", "/thanks.html" %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>