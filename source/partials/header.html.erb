      </div>

      <!-- Navigation links -->
      <div class="hidden-xs col-sm-10">
        <%= link_to "Get Started!", "/apply.html", :class=>"btn btn-default navbar-btn apply-button" %>
        <%= partial "partials/navlinks" %>
      </div>
    </div>

    <!-- Navigation links -->
    <div class="row visible-xs">
      <%= partial "partials/navlinks" %>
    </div>
  </div>
</header>
