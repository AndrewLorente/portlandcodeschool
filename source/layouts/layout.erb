<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
      <%= "Portland Code School: " if current_page.data.title != "Portland Code School" %>
      <%= current_page.data.title %>
    </title>
    
    <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" %>
    <%= stylesheet_link_tag "/stylesheets/all" %>

    <%= javascript_include_tag "/javascripts/all" %>
    <%= javascript_include_tag "/javascripts/jquery" %>
    <%= javascript_include_tag "/javascripts/bootstrap.min" %>
    
  </head>
  
  <body class="<%= page_classes %>">

    <div class="container">
      <%= partial "partials/stickynavbar" %>

        <%= yield %>

    </div>
      <%= partial "partials/footer" %>
    

  </body>
</html>