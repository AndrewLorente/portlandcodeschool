<header class="navbar navbar-default">
  <div class="row">

    <!-- PCS logo -->
    <div class="col-sm-2 col-xs-5">
      <% link_to "/index.html" do %>
        <%= image_tag "logo-lt-teal.png" %>
      <% end %>
    </div>

    <!-- Central text -->
    <div class="col-md-7 hidden-sm hidden-xs">
      <h1 class="large-title">Portland Code School</h1>
    </div>

    <div class="col-sm-7 visible-sm">
      <h1 class="small-title">Portland Code School</h1>
    </div>

    <!-- Social media/Apply buttons -->
    <div class="col-sm-3 col-xs-7">

      <!-- Social media buttons -->
      <div class="navbar-stacked">
        <%= link_to "<i class=\"fa fa-github-square fa-2x\"></i>", "http://github.com/portlandcodeschool"%>
        <%= link_to "<i class=\"fa fa-twitter-square fa-2x\"></i>", "http://twitter.com/pdxcodeschool" %>
        <%= link_to "<i class=\"fa fa-facebook-square fa-2x\"></i>", "https://www.facebook.com/PortlandCodeSchool" %>
        <%= link_to "<i class=\"fa fa-google-plus-square fa-2x\"></i>", "https://plus.google.com/communities/109115545781652920966" %>
      </div>

      <!-- Apply button -->
      <div class="navbar-stacked">
        <button type="button" class="btn btn-default navbar-btn apply-button">
          <%= link_to "Get Info!", "/getinfo.html" %>
        </button>
      </div>
    </div>

  </div>
</header>

