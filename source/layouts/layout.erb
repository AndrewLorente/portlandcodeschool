    <!-- All code copyright Burnside Digital and Portland Code School. Main authors are Shawna C. Scott (technical and design lead, http://shawnacscott.com) and Timothy Winters (https://github.com/timothywinters). For additional contributors, please see the "Contributors" section of the "About This Site" page. -->

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
      <%= current_page.data.title %>
    </title>

    <link href="images/favicon.ico" rel="icon" type="image/x-icon" />

    <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", "/stylesheets/all" %>

    <%= javascript_include_tag "//code.jquery.com/jquery.js", "//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js", "all.js" %>

    <!-- Google Analytics code -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-49017113-1', 'portlandcodeschool.com');
      ga('send', 'pageview');

    </script>

  </head>

  <body class="<%= page_classes %>">
    <a href="#content" class="sr-only">Skip to main content</a>

    <div id="wrap">
      <%= partial "partials/header" %>
      <div class="container content-margin" id="content">

        <%= yield %>

      </div>
      <div id="push"></div>
    </div>
    <%= partial "partials/footer" %>

  </body>
</html>
